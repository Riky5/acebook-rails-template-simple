<%= link_to new_post_path do %>
  What's on your mind?
<% end %>

<% @posts.each do |post| %>
  <p>User: <%= User.find(post.user_id).username %></p>
  <p><%= post.message %></p>
  <% if post.image.attached? %>
  <p> <%= image_tag post.image%>
  </p>

  <% end %>
  <p>Posted on:<%= post.created_at %></p>
<% end %>
